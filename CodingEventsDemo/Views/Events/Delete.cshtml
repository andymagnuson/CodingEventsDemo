@{
}

<h1>Delete Event</h1>

<form method="post">
    @foreach (var evt in ViewBag.events)
    {       
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="checkbox" name="eventIds" value="@evt.Id">
                </div>
            </div>
            <p class="form-control" aria-label="Text input with checkbox"> @evt.Name</p>
        </div>

    }

    <input type="submit" value="Delete Selected Events" class="btn btn-danger">

</form>

